# Auto detect text files and perform LF normalization
* text=auto

# Source files
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.c text eol=lf
*.cmake text eol=lf
CMakeLists.txt text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Python
*.py text eol=lf

# Binary files
*.lib binary
*.a binary
*.dll binary
*.so binary
*.dylib binary
*.exe binary
*.pyd binary
*.pyc binary
